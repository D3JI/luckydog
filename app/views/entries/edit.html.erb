<div class="modbox" id="addblog">
  <% form_for :entry, :url => space_entries_path, :html => {:method => :put} do |f|%>
    <ul>
      <li><strong>文章标题:</strong>
      <label>
        <%= f.text_field :title, :class => 'input'%>
      </label>
      </li>
      <li>
      <div id="addblogcon">
        <%= javascript_include_tag :fckeditor%>
        <%= fckeditor_textarea ('entry', 'content', {:toolbarSet => 'Simple', :width => '150%', :height => '200px' }) %>

        </li>
        <li id="tags"><strong>默认标签</strong>
        </li>
        <li id="tags2" style=""><strong>已有:</strong>
        <li class="upload_notice">被删除。</li>
        <li class="upload_but"><%= submit_tag '立刻发表', :class => 'button' %>
        <input name="action" id="action" value="save" type="hidden">
        </li>
      </ul>
    <% end %>
  </div>
